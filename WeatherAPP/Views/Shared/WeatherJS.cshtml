@{
    ViewBag.Title = "WeatherJS";
}

<h2>WeatherJS</h2>
<p id="name">
   
</p>
<p id="temp">
   
</p>
<p id="humidity">
    
</p>
<button>Get Weather</button>
<script>
    $(document).ready(function () {
        $("button").click(function () {
            $.get("http://api.openweathermap.org/data/2.5/weather?q=Cleveland&APPID=a9228e7c83aa8984cb9ee00799c83c53&units=imperial", function (response) {
                $("#name").text(response.name);
                $("#temp").text(response.main.temp);
                $("#humidity").text(response.main.humidity);
            });
        });
    });
</script>